    <script>
        // Mobile Menu Toggle
        const hamburger = document.querySelector('.hamburger');
        const navMenu = document.querySelector('.nav-menu');
        
        hamburger.addEventListener('click', () => {
            navMenu.classList.toggle('active');
        });
        
        // Close menu when clicking on a link
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', () => {
                navMenu.classList.remove('active');
            });
        });

        // Loan Application Logic
        document.addEventListener('DOMContentLoaded', function() {
            // Step navigation
            const steps = document.querySelectorAll('.form-step');
            const progressBar = document.getElementById('progressBar');
            const stepElements = document.querySelectorAll('.step');
            let currentStep = 1;
            const totalSteps = 5;
            
            // Document validation state
            const docValidation = {
                identity: { count: 0, valid: false },
                income: { count: 0, valid: false },
                residence: { count: 0, valid: false },
                additional: { count: 0 }
            };

            // File type validation
            const validFileTypes = ['application/pdf', 'image/jpeg', 'image/jpg', 'image/png'];
            const maxFileSize = 10 * 1024 * 1024; // 10MB

            // Initialize progress bar
            updateProgressBar();
            
            // Next button functionality
            document.querySelectorAll('.btn-next').forEach(button => {
                button.addEventListener('click', function() {
                    const nextStep = parseInt(this.getAttribute('data-next'));
                    if (validateStep(currentStep)) {
                        navigateToStep(nextStep);
                    }
                });
            });
            
            // Previous button functionality
            document.querySelectorAll('.btn-prev').forEach(button => {
                button.addEventListener('click', function() {
                    const prevStep = parseInt(this.getAttribute('data-prev'));
                    navigateToStep(prevStep);
                });
            });
            
            // Edit link functionality
            document.querySelectorAll('.edit-link').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const stepToEdit = parseInt(this.getAttribute('data-edit'));
                    navigateToStep(stepToEdit);
                });
            });
            
            // File upload functionality
            const uploadArea = document.getElementById('uploadArea');
            const fileInput = document.getElementById('fileInput');
            const browseBtn = document.getElementById('browseBtn');
            const uploadedFiles = document.getElementById('uploadedFiles');
            
            browseBtn.addEventListener('click', function() {
                fileInput.click();
            });
            
            uploadArea.addEventListener('click', function() {
                fileInput.click();
            });
            
            uploadArea.addEventListener('dragover', function(e) {
                e.preventDefault();
                uploadArea.style.borderColor = 'var(--primary)';
                uploadArea.style.backgroundColor = 'rgba(37, 99, 235, 0.05)';
            });
            
            uploadArea.addEventListener('dragleave', function() {
                uploadArea.style.borderColor = '#cbd5e1';
                uploadArea.style.backgroundColor = '';
            });
            
            uploadArea.addEventListener('drop', function(e) {
                e.preventDefault();
                uploadArea.style.borderColor = '#cbd5e1';
                uploadArea.style.backgroundColor = '';
                
                if (e.dataTransfer.files.length > 0) {
                    handleFiles(e.dataTransfer.files);
                }
            });
            
            fileInput.addEventListener('change', function() {
                if (this.files.length > 0) {
                    handleFiles(this.files);
                }
            });
            
            // Submit application
            document.getElementById('submitApplication').addEventListener('click', function() {
                const consentChecked = document.getElementById('consent').checked;
                const docValidChecked = document.getElementById('docValid').checked;
                
                if (!consentChecked || !docValidChecked) {
                    alert('Please confirm that all documents are valid and accurate before submitting.');
                    return;
                }
                
                if (!docValidation.identity.valid || !docValidation.income.valid || !docValidation.residence.valid) {
                    alert('Please complete all document verification requirements before submitting.');
                    return;
                }
                
                submitApplication();
            });

            // Update submit button based on checkboxes
            document.getElementById('consent').addEventListener('change', updateSubmitButton);
            document.getElementById('docValid').addEventListener('change', updateSubmitButton);
            
            // Helper functions
            function navigateToStep(step) {
                // Hide current step
                document.getElementById(`step${currentStep}`).classList.remove('active');
                
                // Update step elements
                stepElements.forEach(stepEl => {
                    const stepNum = parseInt(stepEl.getAttribute('data-step'));
                    stepEl.classList.remove('active');
                    
                    if (stepNum < step) {
                        stepEl.classList.add('completed');
                    } else if (stepNum === step) {
                        stepEl.classList.add('active');
                    } else {
                        stepEl.classList.remove('completed');
                    }
                });
                
                // Show new step
                document.getElementById(`step${step}`).classList.add('active');
                
                // Update current step
                currentStep = step;
                
                // Update progress bar
                updateProgressBar();
                
                // Update review section if we're on the review step
                if (step === 5) {
                    updateReviewSection();
                }
            }
            
            function updateProgressBar() {
                const progress = ((currentStep - 1) / (totalSteps - 1)) * 100;
                progressBar.style.width = `${progress}%`;
            }
            
            function validateStep(step) {
                let isValid = true;
                const currentStepElement = document.getElementById(`step${step}`);
                
                // Check required fields in current step
                const requiredFields = currentStepElement.querySelectorAll('[required]');
                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        isValid = false;
                        field.style.borderColor = '#e53e3e';
                        
                        // Add event to remove error styling when user starts typing
                        field.addEventListener('input', function() {
                            this.style.borderColor = '#ddd';
                        });
                    }
                });
                
                if (!isValid) {
                    alert('Please fill in all required fields before proceeding.');
                }
                
                return isValid;
            }
            
            // Enhanced file handling with validation
            function handleFiles(files) {
                for (let i = 0; i < files.length; i++) {
                    const file = files[i];
                    
                    // Validate file
                    const validationResult = validateFile(file);
                    if (validationResult.isValid) {
                        categorizeAndAddFile(file);
                    } else {
                        showFileError(file.name, validationResult.error);
                    }
                }
                updateDocumentValidation();
                updateNextButtonState();
            }

            // File validation function
            function validateFile(file) {
                // Check file type
                if (!validFileTypes.includes(file.type)) {
                    return { isValid: false, error: 'Invalid file type. Please upload PDF, JPG, or PNG files.' };
                }
                
                // Check file size
                if (file.size > maxFileSize) {
                    return { isValid: false, error: 'File too large. Maximum size is 10MB.' };
                }
                
                return { isValid: true, error: null };
            }

            // Categorize files based on name and type
            function categorizeAndAddFile(file) {
                const fileName = file.name.toLowerCase();
                let category = 'additional';
                
                // Simple categorization based on file name patterns
                if (fileName.includes('driver') || fileName.includes('license') || 
                    fileName.includes('passport') || fileName.includes('id') ||
                    fileName.includes('identification')) {
                    category = 'identity';
                } else if (fileName.includes('pay') || fileName.includes('income') || 
                           fileName.includes('tax') || fileName.includes('w2') ||
                           fileName.includes('bank') || fileName.includes('statement')) {
                    category = 'income';
                } else if (fileName.includes('utility') || fileName.includes('bill') || 
                           fileName.includes('lease') || fileName.includes('mortgage') ||
                           fileName.includes('address')) {
                    category = 'residence';
                }
                
                addFileToList(file, category);
                docValidation[category].count++;
                
                // Simple validation rules
                if (category === 'identity' && docValidation.identity.count >= 1) {
                    docValidation.identity.valid = true;
                }
                if (category === 'income' && docValidation.income.count >= 2) {
                    docValidation.income.valid = true;
                }
                if (category === 'residence' && docValidation.residence.count >= 1) {
                    docValidation.residence.valid = true;
                }
            }

            // Enhanced file list item with category
            function addFileToList(file, category) {
                const fileItem = document.createElement('div');
                fileItem.className = 'file-item';
                fileItem.dataset.category = category;
                
                const fileInfo = document.createElement('div');
                fileInfo.className = 'file-info';
                
                const fileIcon = document.createElement('i');
                fileIcon.className = 'fas fa-file file-icon';
                
                const fileName = document.createElement('span');
                fileName.className = 'file-name';
                fileName.textContent = file.name;
                
                const fileCategory = document.createElement('span');
                fileCategory.className = 'file-category';
                fileCategory.textContent = category;
                
                const fileRemove = document.createElement('i');
                fileRemove.className = 'fas fa-times file-remove';
                fileRemove.addEventListener('click', function() {
                    const category = fileItem.dataset.category;
                    docValidation[category].count--;
                    updateDocumentValidation();
                    fileItem.remove();
                    updateNextButtonState();
                });
                
                fileInfo.appendChild(fileIcon);
                fileInfo.appendChild(fileName);
                fileInfo.appendChild(fileCategory);
                fileItem.appendChild(fileInfo);
                fileItem.appendChild(fileRemove);
                
                uploadedFiles.appendChild(fileItem);
            }

            // Update document validation status
            function updateDocumentValidation() {
                // Update validation messages
                updateValidationMessage('identity', docValidation.identity);
                updateValidationMessage('income', docValidation.income);
                updateValidationMessage('residence', docValidation.residence);
                
                // Update review section
                document.getElementById('reviewIdentityDocs').textContent = 
                    `${docValidation.identity.count} file(s)`;
                document.getElementById('reviewIncomeDocs').textContent = 
                    `${docValidation.income.count} file(s)`;
                document.getElementById('reviewResidenceDocs').textContent = 
                    `${docValidation.residence.count} file(s)`;
                
                // Update final validation status
                updateFinalValidationStatus();
            }

            function updateValidationMessage(type, validation) {
                const element = document.getElementById(`${type}Validation`);
                if (validation.valid) {
                    element.className = 'file-validation validation-success';
                    element.innerHTML = `<i class="fas fa-check-circle"></i> Valid ${type} documents uploaded`;
                } else {
                    element.className = 'file-validation validation-error';
                    const requirement = type === 'income' ? '2 documents' : '1 document';
                    element.innerHTML = `<i class="fas fa-exclamation-triangle"></i> Minimum ${requirement} required`;
                }
            }

            function updateFinalValidationStatus() {
                const allValid = docValidation.identity.valid && 
                               docValidation.income.valid && 
                               docValidation.residence.valid;
                
                // Update next button
                document.getElementById('docNextBtn').disabled = !allValid;
                
                // Update final review status
                const statusElement = document.getElementById('reviewDocStatus');
                if (allValid) {
                    statusElement.textContent = 'Documents Ready for Review';
                    statusElement.style.color = 'var(--secondary)';
                } else {
                    statusElement.textContent = 'Incomplete Documentation';
                    statusElement.style.color = '#d97706';
                }
                
                // Update final validation display
                updateStatusElement('finalIdentityStatus', docValidation.identity.valid, 'Identity');
                updateStatusElement('finalIncomeStatus', docValidation.income.valid, 'Income');
                updateStatusElement('finalResidenceStatus', docValidation.residence.valid, 'Residence');
            }

            function updateStatusElement(elementId, isValid, type) {
                const element = document.getElementById(elementId);
                if (isValid) {
                    element.className = 'validation-status status-verified';
                    element.innerHTML = `<i class="fas fa-check-circle"></i> <span>${type} verification complete</span>`;
                } else {
                    element.className = 'validation-status status-pending';
                    element.innerHTML = `<i class="fas fa-clock"></i> <span>${type} verification pending</span>`;
                }
            }

            function updateNextButtonState() {
                const allValid = docValidation.identity.valid && 
                               docValidation.income.valid && 
                               docValidation.residence.valid;
                document.getElementById('docNextBtn').disabled = !allValid;
            }

            function showFileError(fileName, error) {
                alert(`Error with file "${fileName}": ${error}`);
            }

            function updateSubmitButton() {
                const consentChecked = document.getElementById('consent').checked;
                const docValidChecked = document.getElementById('docValid').checked;
                const allDocsValid = docValidation.identity.valid && 
                                   docValidation.income.valid && 
                                   docValidation.residence.valid;
                
                document.getElementById('submitApplication').disabled = 
                    !(consentChecked && docValidChecked && allDocsValid);
            }
            
            function updateReviewSection() {
                // Loan Details
                document.getElementById('reviewLoanType').textContent = 
                    document.getElementById('loanType').options[document.getElementById('loanType').selectedIndex].text;
                document.getElementById('reviewLoanAmount').textContent = 
                    '$' + document.getElementById('loanAmount').value;
                document.getElementById('reviewLoanPurpose').textContent = 
                    document.getElementById('loanPurpose').options[document.getElementById('loanPurpose').selectedIndex].text;
                document.getElementById('reviewLoanTerm').textContent = 
                    document.getElementById('loanTerm').options[document.getElementById('loanTerm').selectedIndex].text + ' months';
                
                // Personal Information
                document.getElementById('reviewFullName').textContent = 
                    document.getElementById('firstName').value + ' ' + document.getElementById('lastName').value;
                document.getElementById('reviewEmail').textContent = document.getElementById('email').value;
                document.getElementById('reviewPhone').textContent = document.getElementById('phone').value;
                document.getElementById('reviewAddress').textContent = 
                    document.getElementById('address').value + ', ' + 
                    document.getElementById('city').value + ', ' + 
                    document.getElementById('state').value + ' ' + 
                    document.getElementById('zipCode').value;
                
                // Financial Information
                document.getElementById('reviewEmployment').textContent = 
                    document.getElementById('employmentStatus').options[document.getElementById('employmentStatus').selectedIndex].text;
                document.getElementById('reviewIncome').textContent = 
                    '$' + document.getElementById('income').value;
                document.getElementById('reviewHousing').textContent = 
                    '$' + document.getElementById('housingPayment').value;
            }
            
            function submitApplication() {
                // Show loading state
                const submitBtn = document.getElementById('submitApplication');
                const originalText = submitBtn.textContent;
                submitBtn.textContent = 'Submitting...';
                submitBtn.disabled = true;
                
                // Simulate API call
                setTimeout(() => {
                    // Hide current step and show confirmation
                    document.getElementById('step5').classList.remove('active');
                    document.getElementById('confirmationStep').classList.add('active');
                    
                    // Reset button
                    submitBtn.textContent = originalText;
                    submitBtn.disabled = false;
                }, 2000);
            }
            
            // Help section toggle
            document.querySelectorAll('.help-question').forEach(question => {
                question.addEventListener('click', () => {
                    const answer = question.nextElementSibling;
                    const toggle = question.querySelector('.help-toggle');
                    
                    // Close all other FAQs
                    document.querySelectorAll('.help-answer').forEach(otherAnswer => {
                        if (otherAnswer !== answer) {
                            otherAnswer.classList.remove('active');
                        }
                    });
                    
                    document.querySelectorAll('.help-toggle').forEach(otherToggle => {
                        if (otherToggle !== toggle) {
                            otherToggle.classList.remove('active');
                        }
                    });
                    
                    // Toggle current FAQ
                    answer.classList.toggle('active');
                    toggle.classList.toggle('active');
                });
            });
        });
    </script>
