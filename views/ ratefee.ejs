    <script>
        // Mobile Menu Toggle
        const hamburger = document.querySelector('.hamburger');
        const navMenu = document.querySelector('.nav-menu');
        
        hamburger.addEventListener('click', () => {
            navMenu.classList.toggle('active');
        });
        
        // Close menu when clicking on a link
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', () => {
                navMenu.classList.remove('active');
            });
        });
        
        // FAQ Toggle Functionality
        document.querySelectorAll('.faq-question').forEach(question => {
            question.addEventListener('click', () => {
                const answer = question.nextElementSibling;
                const toggle = question.querySelector('.faq-toggle');
                
                // Close all other FAQs
                document.querySelectorAll('.faq-answer').forEach(otherAnswer => {
                    if (otherAnswer !== answer) {
                        otherAnswer.classList.remove('active');
                    }
                });
                
                document.querySelectorAll('.faq-toggle').forEach(otherToggle => {
                    if (otherToggle !== toggle) {
                        otherToggle.classList.remove('active');
                    }
                });
                
                // Toggle current FAQ
                answer.classList.toggle('active');
                toggle.classList.toggle('active');
            });
        });
        
        // Fee Calculator Functionality
        function calculateFees() {
            const loanType = document.getElementById('loan-type-calc').value;
            const amount = parseFloat(document.getElementById('loan-amount-calc').value);
            const term = parseInt(document.getElementById('loan-term-calc').value);
            const creditScore = document.getElementById('credit-score').value;
            
            // Base rates based on credit score
            let baseRate = 0;
            let originationPercent = 0;
            let otherFees = 0;
            
            switch(creditScore) {
                case 'excellent':
                    baseRate = 0.0525; // 5.25%
                    originationPercent = 0.01; // 1%
                    otherFees = 0;
                    break;
                case 'good':
                    baseRate = 0.0725; // 7.25%
                    originationPercent = 0.03; // 3%
                    otherFees = 50;
                    break;
                case 'fair':
                    baseRate = 0.1025; // 10.25%
                    originationPercent = 0.05; // 5%
                    otherFees = 75;
                    break;
                case 'poor':
                    baseRate = 0.1425; // 14.25%
                    originationPercent = 0.06; // 6%
                    otherFees = 100;
                    break;
            }
            
            // Adjust for loan type
            if (loanType === 'mortgage') {
                baseRate -= 0.005; // Lower rates for mortgages
                otherFees += 300; // Additional fees for mortgages
            } else if (loanType === 'business') {
                baseRate -= 0.0075; // Lower rates for business loans
                otherFees += 150; // Additional fees for business loans
            }
            
            // Calculate values
            const monthlyRate = baseRate / 12;
            const x = Math.pow(1 + monthlyRate, term);
            const monthlyPayment = (amount * x * monthlyRate) / (x - 1);
            const totalPayment = monthlyPayment * term;
            const totalInterest = totalPayment - amount;
            const originationFee = amount * originationPercent;
            const totalCost = totalPayment + originationFee + otherFees;
            
            // Update display
            document.getElementById('calc-apr').textContent = (baseRate * 100).toFixed(2) + '%';
            document.getElementById('calc-origination').textContent = '₹' + originationFee.toFixed(0);
            document.getElementById('calc-other-fees').textContent = '₹'+ otherFees.toFixed(0);
            document.getElementById('calc-total-interest').textContent = '₹' + totalInterest.toFixed(0);
            document.getElementById('calc-total-cost').textContent = '₹' + totalCost.toFixed(0);
        }
        
        // Add event listeners to calculator inputs
        document.getElementById('loan-type-calc').addEventListener('change', calculateFees);
        document.getElementById('loan-amount-calc').addEventListener('input', calculateFees);
        document.getElementById('loan-term-calc').addEventListener('change', calculateFees);
        document.getElementById('credit-score').addEventListener('change', calculateFees);
        
        // Initialize calculator on page load
        calculateFees();
    </script>
